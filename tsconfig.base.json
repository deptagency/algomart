{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "allowJs": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    // TODO: enable stricter type checking to reduce risk for runtime errors
    // "strict": true,
    // "forceConsistentCasingInFileNames": true,
    // "allowUnusedLabels": false,
    // "allowUnreachableCode": false,
    // "exactOptionalPropertyTypes": true,
    // "noFallthroughCasesInSwitch": true,
    // "noImplicitOverride": true,
    // "noImplicitReturns": true,
    // "noPropertyAccessFromIndexSignature": true,
    // "noUncheckedIndexedAccess": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "importsNotUsedAsValues": "error",
    // "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@algomart/schemas": [
        "libs/schemas/src/index.ts"
      ],
      "@algomart/scribe/tasks": [
        "libs/scribe/tasks/src/index.ts"
      ],
      "@algomart/shared/adapters": [
        "libs/shared/adapters/src/index.ts"
      ],
      "@algomart/shared/algorand": [
        "libs/shared/algorand/src/index.ts"
      ],
      "@algomart/shared/models": [
        "libs/shared/models/src/index.ts"
      ],
      "@algomart/shared/modules": [
        "libs/shared/modules/src/index.ts"
      ],
      "@algomart/shared/plugins": [
        "libs/shared/plugins/src/index.ts"
      ],
      "@algomart/shared/queues": [
        "libs/shared/queues/src/index.ts"
      ],
      "@algomart/shared/services": [
        "libs/shared/services/src/index.ts"
      ],
      "@algomart/shared/tests": [
        "libs/shared/tests/src/index.ts"
      ],
      "@algomart/shared/utils": [
        "libs/shared/utils/src/index.ts"
      ],
      "@algomart/shared/workers": [
        "libs/shared/workers/src/index.ts"
      ],
      "@api-tests/*": [
        "apps/api/test/*"
      ],
      "@api/*": [
        "apps/api/src/*"
      ],
      "@scribe-tests/*": [
        "apps/scribe/test/*"
      ],
      "@scribe/*": [
        "apps/scribe/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
