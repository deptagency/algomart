{
  "name": "@algomart/root",
  "version": "1.0.0-alpha.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "scripts": {
    "postinstall": "run-s build:schemas",
    "prepare": "husky install",
    "build:schemas": "npm -w @algomart/schemas run build",
    "build:api": "npm -w @algomart/api run build",
    "build:web": "npm -w @algomart/web run build",
    "build": "run-s --silent build:*",
    "start:cms": "npm -w @algomart/cms run start --",
    "start:api": "wait-on http://localhost:8055/ && npm -w @algomart/api run start --",
    "start:web": "wait-on http://localhost:3001/docs/static/index.html && npm -w @algomart/web run start --",
    "start": "run-p --silent start:*",
    "lint": "eslint . --ext ts,tsx,js,jsx",
    "format": "prettier --write .",
    "clean": "rimraf node_modules '**/node_modules'",
    "dev:schemas": "npm -w @algomart/schemas run dev --",
    "dev:cms": "npm -w @algomart/cms run dev --",
    "dev:api": "wait-on http://localhost:8055/ && npm -w @algomart/api run dev --",
    "dev:web": "wait-on http://localhost:3001/docs/static/index.html && npm -w @algomart/web run dev --",
    "dev": "run-p --silent dev:*",
    "test:api": "npm -w @algomart/api run test --",
    "test:web": "npm -w @algomart/web run test --",
    "test": "run-s --silent test:*",
    "type-check:api": "npm -w @algomart/api run type-check --",
    "type-check:web": "npm -w @algomart/web run type-check --",
    "type-check:schemas": "npm -w @algomart/schemas run type-check --",
    "type-check": "run-s --silent type-check:*"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/plugin-transform-runtime": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@babel/preset-react": "7.16.0",
    "@babel/preset-typescript": "7.16.0",
    "@next/eslint-plugin-next": "12.0.2",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@testing-library/dom": "8.11.0",
    "@testing-library/jest-dom": "5.15.0",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.0.2",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "esbuild": "0.13.12",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.2.2",
    "eslint-plugin-jest-dom": "3.9.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-testing-library": "5.0.0",
    "eslint-plugin-unicorn": "37.0.1",
    "husky": "7.0.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.3.1",
    "lint-staged": "11.2.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.59.0",
    "rollup-plugin-dts": "4.0.0",
    "rollup-plugin-esbuild": "4.6.0",
    "rollup-plugin-tsconfig-paths": "1.0.15",
    "ts-jest": "27.0.7",
    "typescript": "4.4.4",
    "wait-on": "6.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,jsx,css,md}": "prettier --write"
  }
}
