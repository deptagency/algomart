{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"],
    "jsx": "react",
    "paths": {
      "@/*": ["apps/web/src/*"],
      "test/*": ["apps/web/test/*"],
      "@algomart/schemas": ["libs/schemas/src/index.ts"]
    }
  },
  "include": [
    "./setup-tests.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/*.d.ts"
  ]
}
